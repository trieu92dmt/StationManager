@model IEnumerable<ProductRoutingMappingViewModel>
@{
    ViewBag.Title = LanguageResource.ApplicationConfig;
    string CurrentController = ConstController.ApplicationConfig;
    string CurrentArea = ConstArea.Utilities;

    string CurrentUrl = HtmlExtensions.GetCurrentUrl(CurrentArea, CurrentController);
}
<table class="table table-bordered table-striped table-hover dataTable no-footer">
    <thead class="isd-table-header">
        <tr>
            <th class="text-center">@LanguageResource.NumberIndex</th>
            <th>@Html.DisplayNameFor(p => p.RoutingVersion)</th>
            <th>@Html.DisplayNameFor(p => p.ProductCode)</th>
            <th>@Html.DisplayNameFor(p => p.ProductName)</th>
            <th>@Html.DisplayNameFor(p => p.OrderIndex)</th>
            <th>@Html.DisplayNameFor(p => p.StepCode)</th>
            <th>@Html.DisplayNameFor(p => p.StepName)</th>
            <th>@Html.DisplayNameFor(p => p.ProductionGuide)</th>
            <th>@Html.DisplayNameFor(p => p.EstimateComplete)</th>
            <th>@Html.DisplayNameFor(p => p.RatedTime)</th>
            <th>@Html.DisplayNameFor(p => p.MoldCode)</th>
            <th>@Html.DisplayNameFor(p => p.ProductPerPage)</th>
        </tr>
    </thead>
  
    <tbody>
        @if (Model.Count() > 0)
        {

            int i = 0;
            foreach (var item in Model)
            {
                i++;
                <tr>
                    <td class="text-center">@i</td>
                    <td class="text-center">@Html.DisplayFor(p => item.RoutingVersion)</td>
                    <td class="text-center">@Html.DisplayFor(p => item.ProductCode)</td>
                    <td>@Html.DisplayFor(p => item.ProductName)</td>
                    <td class="text-center">@Html.DisplayFor(p => item.OrderIndex)</td>
                    <td>@Html.DisplayFor(p => item.StepCode)</td>
                    <td>@Html.DisplayFor(p => item.StepName)</td>
                    <td>@Html.DisplayFor(p => item.ProductionGuide)</td>
                    <td class="text-right">@Html.DisplayFor(p => item.EstimateComplete)</td>
                    <td class="text-right">@Html.DisplayFor(p => item.RatedTime)</td>
                    <td>@Html.DisplayFor(p => item.MoldCode)</td>
                    <td class="text-right">@Html.DisplayFor(p => item.ProductPerPage)</td>
                </tr>
            }

            }
    </tbody>
    <tfoot></tfoot>
</table>
