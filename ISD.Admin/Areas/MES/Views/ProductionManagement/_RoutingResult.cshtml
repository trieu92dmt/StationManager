@model List<ProductionOrderDetailViewModel>
<b>Ghi nhận thêm:</b>
<table class="table table-bordered table-responsive dataTable table-routing-result table-sm">
    @for (int i = 0; i < Model.Count(); i++)
    {

        <tr class="row-@Model[i].ProductAttributes.Replace(".","-")">
            @Html.HiddenFor(p => Model[i].CustomerReference, new { Name = "productionOrderDetailOld[" + i + "].CustomerReference" })
            @Html.HiddenFor(p => Model[i].KTEXT, new { Name = "productionOrderDetailOld[" + i + "].KTEXT" })
            @Html.HiddenFor(p => Model[i].ProductAttributes, new { Name = "productionOrderDetailOld[" + i + "].ProductAttributes" })
            @Html.HiddenFor(p => Model[i].Qty, new { Name = "productionOrderDetailOld[" + i + "].Qty" })
            @Html.HiddenFor(p => Model[i].Unit, new { Name = "productionOrderDetailOld[" + i + "].Unit" })
            @Html.HiddenFor(p => Model[i].Quantity_DLD, new { Name = "productionOrderDetailOld[" + i + "].Quantity_DLD" })
            @Html.HiddenFor(p => Model[i].Quantity_DLKD, new { Name = "productionOrderDetailOld[" + i + "].Quantity_DLKD" })
            @Html.HiddenFor(p => Model[i].POT12, new { Name = "productionOrderDetailOld[" + i + "].POT12" })
            <td>@(i + 1)</td>
            <td colspan="6">
                @Html.DisplayTextFor(p => Model[i].KTEXT)   @(Model[i].POT12 != null && Model[i].POT12 != "" ? "(" + Model[i].POT12 + ")":null) (@Model[i].Qty @Model[i].Unit)
                <a href="#" class="btn btn-danger btn-sm btn-delete-row float-right" data-row="@Model[i].ProductAttributes.Replace(".","-")" data-id="@Model[i].ProductAttributes.Replace(".","-")">x</a>
            </td>
        </tr>
        <tr class="row-@Model[i].ProductAttributes.Replace(".","-")">
            <td>Tồn:</td>
            <td>
                @if (Model[i].Quantity_DLD != null && Model[i].Quantity_DLD != 0)
                {
                    @(string.Format("{0:n0}", Model[i].Quantity_DLD))
                }
            </td>
            <td>
                <div class="input-group input-group-required">
                    <input name="productionOrderDetailOld[@i].Quantity_D" data-id="@Model[i].ProductAttributes.Replace(".","-")" class="form-control text-box single-line" type="number" step="1" value="@Model[i].Quantity_D">
                </div>
            </td>
            <td>Đ</td>
            <td>@string.Format("{0:n0}", Model[i].Quantity_DLKD)</td>
            <td>
                <div class="input-group input-group-required">
                    <input name="productionOrderDetailOld[@i].Quantity_KD" data-id="@Model[i].ProductAttributes.Replace(".","-")" class="form-control text-box single-line" type="number" step="1" value="@Model[i].Quantity_KD">
                </div>
            </td>
            <td>KĐ</td>
        </tr>
        <tr>
            <td colspan="2">Từ</td>
            <td colspan="2">
                <div class="input-group input-group-required">
                    <input name="productionOrderDetailOld[@i].FromTime" class="form-control text-box single-line" type="time" value="00:00">
                </div>
            </td>
            <td>Đến</td>
            <td colspan="2">
                <div class="input-group input-group-required">
                    <input name="productionOrderDetailOld[@i].ToTime" class="form-control text-box single-line" type="time" value="00:00">
                </div>
            </td>
        </tr>
    }
</table>




