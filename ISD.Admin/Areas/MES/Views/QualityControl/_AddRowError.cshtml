@model QualityControlErrorViewModel
@{
    var errorList = (List<CatalogViewModel>)ViewBag.ErrorList;
    var i = ViewBag.index;
}
<tr class="row-error-@i">
    <th rowspan="5" class="text-center">
        @(i+1)
        <input type="hidden" name="errorViewModel[@i].QuanlityControl_Error_Id" value="@Guid.Empty" />
    </th>
    <th style="width: 55%; padding: 3px;">Danh sách lỗi</th>
    <th colspan="3" style="width: 45%; padding: 3px;">Số lượng lỗi</th>
</tr>
<tr class="row-error-@i">
    <td>
        <select name="errorViewModel[@i].CatalogCode" class="form-control">
            <option value="">@LanguageResource.Dropdownlist_Choose</option>
            @if (errorList != null)
            {
                foreach (var item in errorList)
                {
                    <option value="@item.CatalogCode">@item.CatalogText_vi</option>

                }
            }
        </select>
    </td>
    <td colspan="3">
        <input type="number" name="errorViewModel[@i].QuantityError" class="form-control" />
    </td>
</tr>
<tr class="row-error-@i">
    <th>Mức độ lỗi</th>
    <th colspan="3">@LanguageResource.Notes</th>
</tr>
<tr class="row-error-@i">
    <td>
        <input type="text" name="errorViewModel[@i].LevelError" class="form-control" />
    </td>
    <td colspan="3">
        <input type="text" name="errorViewModel[@i].Notes" class="form-control" />
    </td>
</tr>
<tr class="row-error-@i">
    <td colspan="3">
        <input type="file" name="errorViewModel[@i].File" multiple style="width: 80%!important" />
    </td>
    <td>
        <a class="btn btn-sm btn-danger btn-remove-error" data-row="@i">
            <i class="fa fa-trash" aria-hidden="true"></i>
        </a>
    </td>
</tr>
