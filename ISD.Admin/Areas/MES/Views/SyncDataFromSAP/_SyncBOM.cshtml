@model ParamRequestSyncBOMModel
    @using (Html.BeginForm(null, null, FormMethod.Post, new { @id = "frmSyncBOM" }))
{
    <div class="panel-body">
        <div class="row">
            <div class="col-md-5">
                <div class="form-group">
                    <div class="col-md-4">
                        @Html.TooltipLabelFor(p => p.WERKS)
                    </div>
                    <div class="col-md-8">
                        @Html.RequiredTextboxFor(p => p.WERKS, new { @class = "numeric-input form-control" })
                    </div>
                </div>
            </div>

            <div class="col-md-5">
                <div class="form-group">
                    <div class="col-md-4">
                        @Html.TooltipLabelFor(p => p.MATNR)
                    </div>
                    <div class="col-md-8">
                        @Html.RequiredTextboxFor(p => p.MATNR, new { @class = "numeric-input form-control" })
                    </div>
                </div>
            </div>
        </div>

        <div class="col-md-12">
            <div class="form-group">
                <div class="col-md-8 col-md-offset-5">
                    <a class="btn btn-primary btn-inline" id="btn-sync-bom"><i class="fa fa-refresh" aria-hidden="true"></i> Đồng bộ BOM</a>
                </div>
            </div>
        </div>
    </div>
}
