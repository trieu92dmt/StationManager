@model IEnumerable<CapacityRegisterViewModel>
@{
    string CurrentController = ConstController.CapacityRegister;

    string CurrentArea = ConstArea.MasterData;
}

<table class="table table-bordered table-striped table-hover dataTable no-footer">
    <thead class="isd-table-header">
        <tr>
            <th class="text-center">@LanguageResource.NumberIndex</th>
            <th>@Html.DisplayNameFor(c => c.WorkShopName)</th>
            <th class="text-center">@Html.DisplayNameFor(c => c.Year)</th>
            <th class="text-center">@Html.DisplayNameFor(c => c.Month)</th>
            <th class="text-right">@Html.DisplayNameFor(c => c.Capacity)</th>
            <th class="text-center">@LanguageResource.Actions</th>
        </tr>
    </thead>
    <tbody>
        @{ int i = 0; }
        @foreach (var item in Model)
        {
            i++;
            <tr>
                <td class="text-center">@i</td>
                <td>@Html.DisplayFor(c => item.WorkShopName)</td>
                <td class="text-center">@Html.DisplayFor(c => item.Year)</td>
                <td class="text-center">@Html.DisplayFor(c => item.Month)</td>
                <td class="text-right">@Html.DisplayFor(c => item.Capacity)</td>
                <td class="text-center">
                    @HtmlExtensions.EditButton(CurrentArea, CurrentController, item.CapacityRegisterId)
                    @{ 
                        var itemName = string.Format("Capacity đã đăng ký tại {0} | năm {1}", item.WorkShopName, item.Year);
                    }
                    @HtmlExtensions.DeleteButton(CurrentArea, CurrentController, itemName, item.CapacityRegisterId)
                </td>
            </tr>
        }
    </tbody>
    <tfoot></tfoot>
</table>

