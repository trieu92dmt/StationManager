@model ContRegisterViewModel

@{
    ViewBag.Title = LanguageResource.Update + " " + LanguageResource.MasterData_ContRegister.ToLower();
    string CurrentController = ConstController.ContRegister;
    string CurrentArea = ConstArea.MasterData;

    string CurrentUrl = HtmlExtensions.GetCurrentUrl(CurrentArea, CurrentController);
}

@using (Html.BeginForm("Edit", null, FormMethod.Post, new { @enctype = "multipart/form-data", @id = "frmEdit" }))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)
    @Html.HiddenFor(c => c.ContRegisterId)

    <div class="content-header clearfix">
        <h1 class="pull-left">
            @ViewBag.Title
            @HtmlExtensions.BackButton(CurrentArea, CurrentController)
        </h1>
        <div class="pull-right">
            @HtmlExtensions.SaveButton("btn-save", LanguageResource.Btn_Save)
            @HtmlExtensions.SaveButton("btn-save-continue", LanguageResource.Btn_SaveAndContinue)
        </div>
    </div>

    <div class="content">
        <div class="form-horizontal">
            <div class="panel-group">
                <div class="panel panel-default">
                    <div class="panel-body">

                        <div class="form-group">
                            <div class="col-md-3">
                                @Html.TooltipLabelFor(p => p.Plant)
                            </div>
                            <div class="col-md-6">
                                @Html.RequiredTextboxFor(p => p.Plant, new { @readonly = "readonly" })
                            </div>
                        </div>

                        <div class="form-group">
                            <div class="col-md-3">
                                @Html.TooltipLabelFor(p => p.Month)
                            </div>
                            <div class="col-md-2">
                                @Html.RequiredTextboxFor(p => p.Month, new { @readonly = "readonly" })
                            </div>
                            <div class="col-md-2">
                                @Html.TooltipLabelFor(p => p.Year)
                            </div>
                            <div class="col-md-2">
                                @Html.RequiredTextboxFor(p => p.Year, new { @readonly = "readonly" })
                            </div>
                        </div>

                        <div class="form-group">
                            <div class="col-md-3">
                                @Html.TooltipLabelFor(p => p.Cont)
                            </div>
                            <div class="col-md-2">
                                @Html.RequiredTextboxFor(p => p.Cont, new { @autocomplete = "off" })
                            </div>
                        </div>

                    </div>
                </div>
            </div>
        </div>
    </div>
}

@section scripts {
    <script>
        //set event btn-save, btn-save-continue for btn-edit
        $(document).ready(function () {
            ISD.EditInitial("@CurrentUrl");

            numericInput();

            var Cont = $("#Cont").val();
            if (Cont) {
                $("#Cont").val(parseFloat(Cont).toFixed(2));
            }
        });

        function numericInput() {
            $('#Year').inputFilter(function (value) {
                return /^-?\d*$/.test(value);
            });
            $('#Month').inputFilter(function (value) {
                return /^-?\d*$/.test(value);
            });
            $('#Cont').inputFilter(function (value) {
                return /^-?\d*[.,]?\d*$/.test(value);
            });
        }
    </script>
}



