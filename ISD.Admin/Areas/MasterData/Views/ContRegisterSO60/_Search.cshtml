@model IEnumerable<ContRegisterSO60ViewModel>
@{
    string CurrentController = ConstController.ContRegisterSO60;

    string CurrentArea = ConstArea.MasterData;
}

<table class="table table-bordered table-striped table-hover dataTable no-footer">
    <thead class="isd-table-header">
        <tr>
            <th class="text-center">@LanguageResource.NumberIndex</th>
            <th>@Html.DisplayNameFor(c => c.Plant)</th>
            <th class="text-center">@Html.DisplayNameFor(c => c.Month)</th>
            <th class="text-center">@Html.DisplayNameFor(c => c.Year)</th>
            <th>@Html.DisplayNameFor(c => c.Customer)</th>
            <th class="text-right">@Html.DisplayNameFor(c => c.Cont)</th>
            <th class="text-center">@LanguageResource.Actions</th>
        </tr>
    </thead>
    <tbody>
        @{ int i = 0; }
        @foreach (var item in Model)
        {
            i++;
            <tr>
                <td class="text-center">@i</td>
                <td>@Html.DisplayFor(c => item.Plant)</td>
                <td class="text-center">@Html.DisplayFor(c => item.Month)</td>
                <td class="text-center">@Html.DisplayFor(c => item.Year)</td>
                <td>@Html.DisplayFor(c => item.Customer)</td>
                <td class="text-right">@Html.DisplayFor(c => item.Cont)</td>
                <td class="text-center">
                    @HtmlExtensions.EditButton(CurrentArea, CurrentController, item.ContRegister60Id)
                    @{
                        var itemName = string.Format("Cont đã đăng ký tại {0} | tháng {1} năm {2}", item.Plant, item.Month, item.Year);
                    }
                    @HtmlExtensions.DeleteButton(CurrentArea, CurrentController, itemName, item.ContRegister60Id)
                </td>
            </tr>
        }
    </tbody>
    <tfoot></tfoot>
</table>



