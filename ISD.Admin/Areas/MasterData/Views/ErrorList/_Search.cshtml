@model IEnumerable<ErrorListViewModel>

@{
    string CurrentController = ConstController.ErrorList;

    string CurrentArea = ConstArea.MasterData;
}

<table class="table table-bordered table-striped table-hover dataTable no-footer">
    <thead class="isd-table-header">
        <tr>
            <th class="text-center">@LanguageResource.NumberIndex</th>
            <th>@Html.DisplayNameFor(c => c.ErrorListCode)</th>
            <th>@Html.DisplayNameFor(c => c.ErrorListName)</th>
            @*<th>@Html.DisplayNameFor(c => c.DepartmentName)</th>*@
            <th class="text-center">@Html.DisplayNameFor(c => c.StepName)</th>

            <th class="text-center">@Html.DisplayNameFor(c => c.TestTargetName)</th>

            <th class="text-center">@Html.DisplayNameFor(c => c.OrderIndex)</th>
            <th class="text-center">@Html.DisplayNameFor(c => c.Actived)</th>
            @*<th class="text-center">@Html.DisplayNameFor(c => c.ErrorListId)</th>
                <th class="text-center">@Html.DisplayNameFor(c => c.ErrorListCode)</th>
                <th class="text-center">@Html.DisplayNameFor(c => c.ErrorListName)</th>
                <th class="text-center">@Html.DisplayNameFor(c => c.StepCode)</th>
                <th class="text-center">@Html.DisplayNameFor(c => c.TargetCode)</th>
                <th class="text-center">@Html.DisplayNameFor(c => c.OrderIndex)</th>
                <th class="text-center">@Html.DisplayNameFor(c => c.Actived)</th>*@
            <th class="text-center">@LanguageResource.Actions</th>
        </tr>
    </thead>
    <tbody>
        @{ int i = 0; }
        @foreach (var item in Model)
        {
            i++;
            <tr>
                @*STT*@
                <td class="text-center">@i</td>
                @*Mã lỗi*@
                <td>@Html.DisplayFor(c => item.ErrorListCode)</td>
                @*Tên lỗi*@
                <td>@Html.DisplayFor(c => item.ErrorListName)</td>
                @*Công đoạn*@
                <td class="text-center">@Html.DisplayFor(c => item.StepName)</td>
                @*Chỉ tiêu kiểm tra*@
                <td class="text-center">@Html.DisplayFor(c => item.TestTargetName)</td>
                @*// <td>@Html.DisplayFor(c => item.DepartmentName)</td>*@
                @*Thứ tự*@
                <td class="text-center">@Html.DisplayFor(c => item.OrderIndex)</td>
                @*Trạng thái*@
                <td class="text-center">@HtmlExtensions.ActivedIcon(item.Actived)</td>
                <td class="text-center">
                    @HtmlExtensions.EditButton(CurrentArea, CurrentController, item.ErrorListId)
                </td>
            </tr>
        }
    </tbody>
    <tfoot></tfoot>
</table>



