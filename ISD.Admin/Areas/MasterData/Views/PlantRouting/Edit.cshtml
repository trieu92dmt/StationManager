@model PlantRoutingConfigViewModel
@{
    ViewBag.Title = LanguageResource.PlantRouting;
    string CurrentArea = ConstArea.MasterData;
    string CurrentController = ConstController.PlantRouting;

    string CurrentUrl = HtmlExtensions.GetCurrentUrl(CurrentArea, CurrentController);
}
@using (Html.BeginForm("Edit", null, FormMethod.Post, new { @enctype = "multipart/form-data", @id = "frmEdit" }))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)
    @Html.HiddenFor(p => p.PlantRoutingCode)

    <div class="content-header clearfix">
        <h1 class="pull-left">
            @HtmlExtensions.BackButton(CurrentArea, CurrentController)
        </h1>
        <div class="pull-right">
            @HtmlExtensions.SaveButton("btn-save", LanguageResource.Btn_Save)
            @HtmlExtensions.SaveButton("btn-save-continue", LanguageResource.Btn_SaveAndContinue)
        </div>
    </div>

    <div class="content">
        <div class="box box-primary">
            <div class="box-header with-border">
                <h3 class="box-title">@ViewBag.Title</h3>
            </div>
            <div class="box-body">
                <div class="form-group">
                    <div class="col-md-6">
                        @Html.TooltipLabelFor(p => p.PlantRoutingCode)
                        @Html.RequiredTextboxFor(p => p.PlantRoutingCode, new { disabled = "disabled" })
                    </div>
                    <div class="col-md-6">
                        @Html.TooltipLabelFor(p => p.PlantRoutingName)
                        @Html.RequiredTextboxFor(p => p.PlantRoutingName)
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-6">
                        @Html.TooltipLabelFor(p => p.PlantRoutingGroup)
                        @Html.DropDownList("PlantRoutingGroup", null, LanguageResource.Dropdownlist_Choose, new { @class = "form-control with-search" })
                    </div>
                    <div class="col-md-6">
                        @Html.TooltipLabelFor(p => p.FromData)
                        @Html.DropDownList("FromData", null, LanguageResource.Dropdownlist_Choose, new { @class = "form-control with-search" })
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-6">
                        @Html.TooltipLabelFor(p => p.Attribute1)
                        @*@Html.RequiredTextboxFor(p => p.Attribute1)*@
                        @Html.DropDownList("Attribute1", null, LanguageResource.Dropdownlist_Choose, new { @class = "form-control with-search" })
                    </div>
                    <div class="col-md-6">
                        @Html.TooltipLabelFor(p => p.Attribute2)
                        @Html.RequiredTextboxFor(p => p.Attribute2)
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-6">
                        @Html.TooltipLabelFor(p => p.Attribute3)
                        @Html.RequiredTextboxFor(p => p.Attribute3)
                    </div>
                    <div class="col-md-6">
                        @Html.TooltipLabelFor(p => p.Attribute4)
                        @Html.RequiredTextboxFor(p => p.Attribute4)
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-6">
                        @Html.TooltipLabelFor(p => p.Attribute5)
                        @Html.RequiredTextboxFor(p => p.Attribute5)
                    </div>
                    <div class="col-md-6">
                        @Html.TooltipLabelFor(p => p.Attribute6)
                        @Html.RequiredTextboxFor(p => p.Attribute6)
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-6">
                        @Html.TooltipLabelFor(p => p.Attribute7)
                        @Html.RequiredTextboxFor(p => p.Attribute7)
                    </div>
                    <div class="col-md-6">
                        @Html.TooltipLabelFor(p => p.Attribute8)
                        @Html.RequiredTextboxFor(p => p.Attribute8)
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-6">
                        @Html.TooltipLabelFor(p => p.Attribute9)
                        @Html.RequiredTextboxFor(p => p.Attribute9)
                    </div>
                    <div class="col-md-6">
                        @Html.TooltipLabelFor(p => p.Attribute10)
                        @Html.RequiredTextboxFor(p => p.Attribute10)
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-6">
                        @Html.TooltipLabelFor(p => p.LeadTimeType)
                        @Html.DropDownList("LeadTimeType", new List<SelectListItem>()
                                    {
                                        new SelectListItem(){Text = "Nhập tay", Value = "true"},
                                        new SelectListItem(){Text = "Tự tính", Value = "false"}
                                    }, new { @class = "font-control" })
                    </div>
                    <div class="col-md-6" id="lead-time-config">
                        @Html.TooltipLabelFor(p => p.LeadTime)
                        @Html.RequiredTextboxFor(p => p.LeadTime, new { type = "number" })
                    </div>
                    <div class="col-md-6" id="lead-time-formula">
                        @Html.TooltipLabelFor(p => p.LeadTimeFormula)
                        @Html.RequiredTextboxFor(p => p.LeadTimeFormula)
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-6">
                        @Html.TooltipLabelFor(p => p.FromDate)
                        @Html.RequiredTextboxFor(p => p.FromDate)
                    </div>
                    <div class="col-md-6">
                        @Html.TooltipLabelFor(p => p.DescriptionFromDate)
                        @Html.TextAreaFor(p => p.DescriptionFromDate, new { @class = "form-control" })
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-6">
                        @Html.TooltipLabelFor(p => p.ToDate)
                        @Html.RequiredTextboxFor(p => p.ToDate)
                    </div>
                    <div class="col-md-6">
                        @Html.TooltipLabelFor(p => p.DescriptionToDate)
                        @Html.TextAreaFor(p => p.DescriptionToDate, new { @class = "form-control" })
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-6">
                        @Html.TooltipLabelFor(p => p.Condition)
                        @Html.RequiredTextboxFor(p => p.Condition)
                    </div>

                    <div class="col-md-6">
                        @Html.TooltipLabelFor(p => p.DescriptionCondition)
                        @Html.TextAreaFor(p => p.DescriptionCondition, new { @class = "form-control" })
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-6">
                        @Html.TooltipLabelFor(p => p.IsPrimaryStep)
                        @Html.ActivedRadioButtonIs(p => p.IsPrimaryStep)
                    </div>

                    <div class="col-md-6">
                        @Html.TooltipLabelFor(p => p.OrderIndex)
                        @Html.RequiredTextboxFor(p => p.OrderIndex, new { type = "number" })
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-6">
                        @Html.TooltipLabelFor(p => p.Actived)
                        @Html.ActivedRadioButton(p => p.Actived)
                    </div>
                </div>
            </div>
        </div>
    </div>
}

@section scripts {
    <script>
       //set event btn-save, btn-save-continue for btn-create
        $(document).ready(function () {
            ISD.EditInitial("@CurrentUrl");
            $('#LeadTimeType').trigger('change');
        });

        //Xử lý dropdown chọn lead type
        //1. Nếu chọn "Nhập tay" => hiển thị input = số
        //2. Nếu chọn "Tự tính" => hiển thị input = chữ (lưu công thức tính)
        $(document).on('change', '#LeadTimeType', function () {
            var value = $(this).val();
            if (value) {
                if (value.toLowerCase() === "true") {
                    $('#lead-time-config').show();
                    $('#lead-time-formula').hide();
                }
                else if (value.toLowerCase() === "false") {
                    $('#lead-time-formula').show();
                    $('#lead-time-config').hide();
                }
            }
        });
    </script>
}

