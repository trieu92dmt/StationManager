@model IEnumerable<PlantRoutingConfigViewModel>
@{
    string CurrentArea = ConstArea.MasterData;
    string CurrentController = ConstController.PlantRouting;
}
<style>
    td {
        word-break: break-all;
        white-space: normal;
    }
</style>
<table class="table table-bordered table-striped table-hover dataTable no-footer">
    <thead class="isd-table-header">
        <tr>
            <th class="text-center">@LanguageResource.NumberIndex</th>
            <th>@Html.DisplayNameFor(p => p.PlantRoutingCode)</th>
            <th>@Html.DisplayNameFor(p => p.PlantRoutingName)</th>
            <th>@Html.DisplayNameFor(p => p.PlantRoutingGroup)</th>
            <th>@Html.DisplayNameFor(p => p.FromData)</th>
            <th>@Html.DisplayNameFor(p => p.Attribute1)</th>
            <th>@Html.DisplayNameFor(p => p.Attribute2)</th>
            <th>@Html.DisplayNameFor(p => p.LeadTimeType)</th>
            <th class="text-right">@Html.DisplayNameFor(p => p.LeadTime)</th>
            <th>@Html.DisplayNameFor(p => p.FromDate)</th>
            <th>@Html.DisplayNameFor(p => p.ToDate)</th>
            @*<th>@Html.DisplayNameFor(p => p.Condition)</th>*@
            <th class="text-center">@Html.DisplayNameFor(p => p.OrderIndex)</th>
            <th class="text-center">@Html.DisplayNameFor(p => p.Actived)</th>
            <th class="text-center">@LanguageResource.Actions</th>
        </tr>
    </thead>
    <tbody>
        @{ int i = 0; }
        @foreach (var item in Model)
        {
            i++;
            <tr>
                <td class="text-center">@i</td>
                <td>@Html.DisplayFor(p => item.PlantRoutingCode)</td>
                <td>@Html.DisplayFor(p => item.PlantRoutingName)</td>
                <td>@Html.DisplayFor(p => item.PlantRoutingGroup)</td>
                <td>@Html.DisplayFor(p => item.FromData)</td>
                <td>@Html.DisplayFor(p => item.Attribute1)</td>
                <td>@Html.DisplayFor(p => item.Attribute2)</td>
                @*<td>@(item.LeadTimeType == true ? "Nhập tay" : "Công thức") </td>*@
                <td>
                    @if (item.LeadTimeType == true)
                    {
                        <span>Nhập tay</span>
                    }
                    else if (item.LeadTimeType == false)
                    {
                        <span>Công thức</span>
                    }
                </td>
                <td class="text-center">@Html.DisplayFor(p => item.LeadTimeDisplay)</td>
                <td>@Html.DisplayFor(p => item.FromDate)</td>
                <td>@Html.DisplayFor(p => item.ToDate)</td>
                @*<td>@Html.DisplayFor(p => item.Condition)</td>*@
                <td class="text-center">@Html.DisplayFor(p => item.OrderIndex)</td>
                <td class="text-center">@HtmlExtensions.ActivedIcon(item.Actived)</td>
                <td class="text-center">
                    <a href="/@CurrentArea/@CurrentController/Edit/@item.PlantRoutingCode" class="btn btn-default btn-edit" onclick="$(this).button('loading')"><i class='fa fa-pencil'></i> @LanguageResource.Btn_Edit</a>
                    @HtmlExtensions.DeleteButton(CurrentArea, CurrentController, item.PlantRoutingName, item.PlantRoutingCode.Value)
                </td>
            </tr>
        }
    </tbody>
    <tfoot></tfoot>
</table>

