@section scripts {
    <script>
        //set event btn-save, btn-save-continue for btn-edit
        $(document).ready(function () {
            ISD.EditInitial("@CurrentUrl");
            numericInput();
        });

        function numericInput() {
            $('#NumberOfMachines').inputFilter(function (value) {
                return /^-?\d*$/.test(value);
            });
            $('#OrderIndex').inputFilter(function (value) {
                return /^-?\d*$/.test(value);
            });
        }
        // 1: Lấy danh sách EquipmentId
        // 2: Post danh sách EquipmentId đến Action
        $(document).on("change", "#EquipmentList", function () {
            // 1: Lấy danh sách EquipmentId
            var selectedEquipmentId = new Array();
            $("#EquipmentList").each(function () {
                selectedEquipmentId.push($(this).val());
            });
            //Kiểm tra null
            if (selectedEquipmentId[0] == null) {
                $('#EquipmentView').val('');
                $('#UnitView').val('');
            }
            // 2: Post danh sách EquipmentId đến Action
            $.ajax({
                contentType: 'application/json;',
                dataType: 'json',
                type: 'POST',
                url: '/Routing/CheckUnit',
                data: JSON.stringify(selectedEquipmentId[0]),
                success: function (response) {
                    if (response.isSuccess == false) {
                        $("#btn-save").show();
                        $("#btn-save-continue").show();
                        if (response.message != null) {
                            alertPopup(false, response.message);
                            $("#btn-save").hide();
                            $("#btn-save-continue").hide();
                        }
                    }
                    if (response.isSuccess == true) {
                        $('#EquipmentView').val(response.data.EquipmentProduction);
                        $('#UnitView').val(response.data.Unit);
                        $("#btn-save").show();
                        $("#btn-save-continue").show();
                    }
                },
                error: function (xhr, status, error) {
                    alertPopup(false, xhr.responseText);
                }
            });
        })
    </script>
