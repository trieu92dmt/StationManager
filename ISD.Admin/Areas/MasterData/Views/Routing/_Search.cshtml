@model IEnumerable<RoutingViewModel>
@{
    string CurrentController = ConstController.Routing;

    string CurrentArea = ConstArea.MasterData;
}

<table class="table table-bordered table-striped table-hover dataTable no-footer">
    <thead class="isd-table-header">
        <tr>
            <th class="text-center isd-table-th-stt">@LanguageResource.NumberIndex</th>
            @*<th class="text-center">@Html.DisplayNameFor(p => p.Plant)</th>*@
            <th>@Html.DisplayNameFor(p => p.StepCode)</th>
            <th>@Html.DisplayNameFor(p => p.StepName)</th>
            <th>@Html.DisplayNameFor(p => p.EquipmentCode)</th>
            <th style="width:400px">@Html.DisplayNameFor(p => p.EquipmentName)</th>
            <th  style="width:400px">@Html.DisplayNameFor(p => p.Description)</th>
            <th>@Html.DisplayNameFor(p => p.EquipmentProduction)</th>
            <th>@Html.DisplayNameFor(p => p.EquipmentProductionUnit)</th>
            @*<th>@Html.DisplayNameFor(p => p.OrderIndex)</th>*@
            @*<th class="text-center">@Html.DisplayNameFor(p => p.Actived)</th>*@
            <th class="text-center">@LanguageResource.Actions</th>
        </tr>
    </thead>
    <tbody>
        @{
            int i = 0;
            if (Model != null)
            {
                foreach (var item in Model)
                {
                    i++;
                <tr>
                    <td class="text-center">@i</td>
                    @*<td class="text-center">@Html.DisplayFor(p => item.Plant)</td>*@
                    <td>@Html.DisplayFor(p => item.StepCode)</td>
                    <td>@Html.DisplayFor(p => item.StepName)</td>
                    <td>@Html.DisplayFor(p => item.EquipmentCode)</td>
                    <td>
                        <div style="width: 380px;overflow: hidden; text-overflow: ellipsis;"
                             title="@Html.DisplayFor(p => item.EquipmentName)">
                            @Html.DisplayFor(p => item.EquipmentName)
                        </div>
                    </td>
                    <td>
                        <div style="width: 380px;overflow: hidden; text-overflow: ellipsis;"
                             title="@Html.DisplayFor(p => item.Description)">
                            @Html.DisplayFor(p => item.Description)
                        </div>
                    </td>
                    @if (item.EquipmentProduction == 0)
                    {
                        <td class="text-left"></td>
                    }
                    else
                    {
                        <td class="text-right">@Html.DisplayFor(p => item.EquipmentProduction)</td>
                    }
                    <td class="text-left">@Html.DisplayFor(p => item.EquipmentProductionUnit)</td>
                    @*<td>@Html.DisplayFor(p => item.OrderIndex)</td>*@
                    @*<td class="text-center">@HtmlExtensions.ActivedIcon(item.Actived)</td>*@
                    <td class="text-center">
                        @HtmlExtensions.EditButton(CurrentArea, CurrentController, item.StepId)
                        @*@HtmlExtensions.DeleteButton(CurrentArea, CurrentController, item.StepName,item.StepId)*@
                    </td>
                </tr>
                }
            }

        }

    </tbody>
    <tfoot></tfoot>
</table>
<style>
    .div:hover + .EquipmentName {
        display: block
    }
</style>


