@model ProductionOrderViewModel
@{
    ViewBag.Title = LanguageResource.LSX_MatchCard;
}

<div class="content-header clearfix">
    <h1 class="pull-left">
        @ViewBag.Title
    </h1>
    <div class="pull-right">

    </div>
</div>
<div class="content">
    <div class="form-horizontal">
        <div class="panel-group">
            <div class="panel panel-default panel-search">
                @using (Html.BeginForm("_Search", null, FormMethod.Post, new { @id = "frmSearch", @class = "isd-form-search" }))
                {
                    <div class="panel-body">
                        <div class="row">

                            <div class="col-md-5">
                                <div class="form-group">
                                    <div class="col-md-4">
                                        @Html.LabelByPropertyNameFor(p => p.ZZLSX, LanguageResource.MatchCode)
                                    </div>
                                    <div class="col-md-8">
                                        @Html.TextBoxFor(p => p.ZZLSX, new { @class = "form-control text-box single-line", @autocomplete = "off" })
                                    </div>
                                </div>
                                <div class="form-group">
                                    <div class="col-md-4">
                                        @Html.LabelByPropertyNameFor(p => p.ZZLSX, LanguageResource.LSX_PrintItemName)
                                    </div>
                                    <div class="col-md-8">
                                        @Html.TextBoxFor(p => p.ZZLSX, new { @class = "form-control text-box single-line", @autocomplete = "off" })
                                    </div>
                                </div>
                                <div class="form-group">
                                    <div class="col-md-4">
                                        @Html.LabelByPropertyNameFor(p => p.ZZLSX, LanguageResource.LSX_SoPhieuThietKe)
                                    </div>
                                    <div class="col-md-8">
                                        @Html.TextBoxFor(p => p.ZZLSX, new { @class = "form-control text-box single-line", @type="number" })
                                    </div>
                                </div>
                            </div>

                            <div class="col-md-5">
                                <div class="form-group">
                                    <div class="col-md-4">
                                        @Html.LabelByPropertyNameFor(p => p.KTDK, LanguageResource.ProductionOrderDate)
                                    </div>
                                    <div class="col-md-3">
                                        @Html.TextBoxFor(p => p.KTDK, new { @class = "form-control text-box single-line", @type = "date" })
                                    </div>
                                   
                                </div>
                                <div class="form-group">
                                    <div class="col-md-4">
                                        @Html.LabelByPropertyNameFor(p => p.KTDC, LanguageResource.LSX_PrintReqDate)
                                    </div>
                                    <div class="col-md-3">
                                        @Html.TextBoxFor(p => p.KTDC, new { @class = "form-control text-box single-line", @type = "date" })
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-12">
                                <div class="form-group">
                                    <div class="col-md-8 col-md-offset-5">
                                        @HtmlExtensions.SearchButton()
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>

            <div class="panel panel-default">
                <div class="panel-body">
                    <div id="divSearchResult"></div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="delete-confirm"></div>

