@model IEnumerable<TaskViewModel>
@{ ViewBag.Title = LanguageResource.HomePage;
    var chosseModuleCssClass = "mt-n-15"; }

@if (ViewBag.isShowDashBoard == true)
{
    <section class="content-header">
        <h1 style=" margin: 0px 0px 0px 15px;">
            @LanguageResource.HomePageTitle
        </h1>
    </section>

    <section class="isd-content container-fluid">
        <div class="col-md-4 col-sm-8 col-xs-12">
            <div class="info-box bg-aqua">
                <span class="info-box-icon"><i class="fa fa-users"></i></span>

                <div class="info-box-content">
                    <span class="info-box-text">Khách hàng</span>
                    <span class="info-box-number">@ViewBag.Customer </span>

                    <div class="progress">
                        <div class="progress-bar" style="width: 100%"></div>
                    </div>
                    <span class="progress-description">
                        Tổng số khách hàng trên toàn hệ thống
                    </span>
                </div>
                <!-- /.info-box-content -->
            </div>
            <!-- /.info-box -->
        </div>
        <div class="col-md-4 col-sm-8 col-xs-12">
            <div class="info-box bg-green">
                <span class="info-box-icon"><i class="fa fa-address-book"></i></span>

                <div class="info-box-content">
                    <span class="info-box-text">Liên hệ</span>
                    <span class="info-box-number">@ViewBag.Contact </span>

                    <div class="progress">
                        <div class="progress-bar" style="width: 100%"></div>
                    </div>
                    <span class="progress-description">
                        Tổng số thông tin liên hệ
                    </span>
                </div>
                <!-- /.info-box-content -->
            </div>
            <!-- /.info-box -->
        </div>
        <div class="col-md-4 col-sm-8 col-xs-12">
            <div class="info-box bg-orange">
                <span class="info-box-icon"><i class="fa fa-tasks"></i></span>

                <div class="info-box-content">
                    <span class="info-box-text">Công việc</span>
                    <span class="info-box-number">@ViewBag.Task </span>

                    <div class="progress">
                        <div class="progress-bar" style="width: 100%"></div>
                    </div>
                    <span class="progress-description">
                        Tổng số công việc đang chờ xử lý
                    </span>
                </div>
                <!-- /.info-box-content -->
            </div>
            <!-- /.info-box -->
        </div>

        <div class="col-md-4 col-sm-8 col-xs-12">
            <div class="box box-primary">
                <div class="box-header with-border">
                    <h3 class="box-title">Thông tin cập nhật (@ViewBag.TotalTask)</h3>
                </div>
                <!-- /.box-header -->
                <div class="box-body" style="height: 300px;">
                    <ul class="products-list product-list-in-box">
                        @foreach (var item in Model)
                        {
                            <li class="item">
                                <div class="product-img">
                                    @if (item.WorkFlowImageUrl != null)
                                    {
                                        <img src="/Upload/WorkFlow/@item.WorkFlowImageUrl" alt="@item.WorkFlowName"> }
                                    else
                                    {
                                        <img src="~/Images/default-50x50.gif" alt="No Image">}
                                </div>
                                <div class="product-info">
                                    <a href="/Work/Task/Edit/@item.TaskId" class="product-title">
                                        (@item.WorkFlowCode) @item.Summary
                                    </a>
                                    <span class="product-description">
                                        @Html.DisplayFor(model => item.CreateTime)
                                    </span>
                                </div>
                            </li>
                        }

                        <!-- /.item -->
                    </ul>
                </div>
                <!-- /.box-body -->
                <div class="box-footer text-center">
                    <a href="javascript:void(0)" class="uppercase">Xem thêm</a>
                </div>
                <!-- /.box-footer -->
            </div>
        </div>
        <!-- Bảng tin -->
        <div class="col-md-4 col-sm-8 col-xs-12">
            <div class="box box-success dashboard-news">
                <div class="box-header with-border">
                    <h3 class="box-title">Bảng tin</h3>
                </div>
                <!-- /.box-header -->
                <div class="box-body" style="height: 300px;">
                    @if (((List<ISD.ViewModels.MasterData.NewsHomeViewModel>)ViewBag.News).Count > 0)
                    {
                        <ul class="products-list product-list-in-box">
                            @foreach (var item in (List<ISD.ViewModels.MasterData.NewsHomeViewModel>)ViewBag.News)
                            {
                                <li class="item">
                                    <div class="product-img">
                                        @if (item.ImageUrl != null && item.ImageUrl != "noimage.jpg")
                                        {
                                            <img src="/Upload/News/Thum/@item.ImageUrl"> }
                                        else
                                        {
                                            if (item.ImageCategoryUrl != null)
                                            {
                                                <img src="/Upload/NewsCategory/Thum/@item.ImageCategoryUrl" alt="No Image"> }
                                            else
                                            {
                                                <img src="/Upload/NewsCategory/Thum/noimage.jpg" alt="No Image">}

                                        }
                                    </div>
                                    <div class="product-info">
                                        <a href="/MasterData/News/Detail/@item.NewsId" class="product-title">
                                            @item.Title
                                        </a>
                                        <span class="product-description">
                                            @Html.DisplayFor(model => item.CreateTime)
                                        </span>
                                    </div>
                                </li>
                            }

                            <!-- /.item -->
                        </ul> }
                    else
                    {
                        <div class="icon">
                            <i class="ion ion-social-twitch-outline"></i>
                        </div>
                        <center>
                            Hiện tại chưa có tin tức nào!
                        </center>}
                </div>
                <!-- /.box-body -->
                <div class="box-footer text-center">
                    <a href="javascript:void(0)" class="uppercase">Xem thêm</a>
                </div>
                <!-- /.box-footer -->
            </div>
        </div>

        <div class="col-md-4 col-sm-8 col-xs-12">
            <div class="box box-warning dashboard-work">
                <div class="box-header with-border">
                    <h3 class="box-title">Công việc được phân công</h3>
                </div>
                <!-- /.box-header -->
                <div class="box-body">
                    <div class="row">
                        <div class="col-md-6">
                            <div class="small-box">
                                <a class="color-black" href="/Work/Task?Type=MyWork&tab=tab-kanban">
                                    <div class="inner color-black">
                                        <p style="font-size:xx-large">@ViewBag.Todo</p>
                                        <h4>Được phân công</h4>
                                    </div>
                                    <div class="icon">
                                        <i class="ion ion-pie-graph"></i>
                                    </div>
                                </a>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="small-box bg-light-blue">
                                <a class="bg-light-blue" href="/Work/Task?Type=MyWork&tab=tab-kanban&TaskProcessCode_Input=Processing">
                                    <div class="inner">
                                        <p style="font-size:xx-large">@ViewBag.Incomplete</p>
                                        <h4>Đang thực hiện</h4>
                                    </div>
                                    <div class="icon">
                                        <i class="ion ion-pie-graph"></i>
                                    </div>
                                </a>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6">
                            <div class="small-box bg-red">
                                <a class="bg-red" href="/Work/Task?Type=MyWork&tab=tab-kanban&TaskProcessCode_Input=Expired">
                                    <div class="inner">
                                        <p style="font-size:xx-large">@ViewBag.Expired</p>
                                        <h4>Đã quá hạn</h4>
                                    </div>
                                    <div class="icon">
                                        <i class="ion ion-pie-graph"></i>
                                    </div>
                                </a>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="small-box bg-green">
                                <a class="bg-green" href="/Work/Task?Type=MyWork&tab=tab-kanban&TaskProcessCode_Input=CompletedOnTime">
                                    <div class="inner">
                                        <p style="font-size:xx-large">@ViewBag.Completed</p>
                                        <h4>Đã hoàn thành</h4>
                                    </div>
                                    <div class="icon">
                                        <i class="ion ion-pie-graph"></i>
                                    </div>
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
                <!-- /.box-body -->
                @*<div class="box-footer text-center">
                        <a href="javascript:void(0)" class="uppercase">Xem thêm</a>
                    </div>*@
                <!-- /.box-footer -->
            </div>
        </div>
    </section>
}
else
{
    chosseModuleCssClass = "isd-content-100";
}
@if (ViewBag.isShowChoseModule == true)
{
    <section class="@chosseModuleCssClass container-fluid">
        <div class="greating-modules-block text-center">
            @{ var ModuleList = (List<ModuleViewModel>)ViewBag.ModuleList;
                var start = 0; }

            @if (ModuleList != null && ModuleList.Count > 0)
            {
                var FirstModule = ModuleList.First();
                if (ViewBag.isShowDashBoard != true)
                {
                    <div class="row">
                        <div class="col-md-3 col-md-offset-2">
                            <a class="link" title="@FirstModule.ModuleName" href="/Module/@FirstModule.ModuleId">
                                <img alt="@FirstModule.ModuleName" src="/Upload/Module/@FirstModule.ImageUrl">
                            </a>
                        </div>
                        <div class="col-md-3 text-left" style="padding-top:40px;">
                            <h1>
                                <a class="link" title="@FirstModule.ModuleName" href="/Module/@FirstModule.ModuleId">@FirstModule.ModuleName</a>
                            </h1>
                            <span class="description">
                                @FirstModule.Description
                            </span>
                        </div>
                    </div>start++;
                }
            }

            @if (ModuleList != null && ModuleList.Count > 1)
            {
                <div class="default-list-products">
                    @for (int i = start; i < ModuleList.Count; i++)
                    {
                        var Module = ModuleList[i];
                        var CssClass = string.Empty;
                        if (i == 1 && ViewBag.isShowDashBoard != true)
                        {
                            CssClass = "col-md-offset-1";
                        }
                        <div class="col-xs-6 col-sm-2 @CssClass">
                            <a class="link header product" href="/Module/@Module.ModuleId">
                                <img alt="@Module.ModuleName" src="/Upload/Module/@Module.ImageUrl">
                            </a>
                            <h3 class="title">
                                @Module.ModuleName
                            </h3>
                        </div>}
                </div>}
        </div>
    </section>}

